<Page
    x:Class="LocaAcademiaDePizzeria.PlanningView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LocaAcademiaDePizzeria"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <DataTemplate x:Key="DriverListView_Collapsed_Collapsed_DefaultItemTemplate"
                      x:DataType="local:DriverViewModel">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{x:Bind actDeliveries}"/>
                <Image Source="{x:Bind imgSource}" Width="50" Height="50" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>
    <Grid>
        <Image
            Source="Assets/SoriaMap.png"
            Stretch="Fill">
        </Image>
        <Button Content="PIZZA TIME" Margin="0,0,0,0" VerticalAlignment="Bottom" HorizontalAlignment="Right" Height="68" Width="124"
                Background="LightGreen">
            <!--AQUI TENDRIA QUE IR EL ICONO DEL PIZZATIME-->
            <!--<StackPanel>
                <Image Source="Assets/Samples/1.png"/>
            </StackPanel>-->
        </Button>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="1"
            Orientation="Vertical" 
            VerticalAlignment="Bottom" HorizontalAlignment="Left"
            Height="388" Margin="0,0,0,0" RenderTransformOrigin="0.5,0.5" Width="180">
                <ListView
                x:Name="collapsedDrivers"
                ItemsSource="{x:Bind DriverList, Mode=OneWay}"
                ItemTemplate="{StaticResource DriverListView_Collapsed_Collapsed_DefaultItemTemplate}"/>
                <Button>
                    <!--AQUI TENDRIA QUE IR EL ICONO DEL PIZZATIME-->
                    <!--<StackPanel>
                <Image/>
            </StackPanel>-->
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
